server:
    disable: true

positions:
  filename: /tmp/positions.yml

clients:
  - url: "{{ promtail_loki_url }}/loki/api/v1/push"

scrape_configs:
- job_name: system
  static_configs:
  - targets:
      - localhost
    labels:
      job: "{{ inventory_hostname }}_varlogs"
      __path__: /var/log/*log