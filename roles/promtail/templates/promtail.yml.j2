server:
    disable: true

positions:
  filename: /tmp/positions.yml

clients:
  - url: "{{ promtail_loki_url }}/loki/api/v1/push"

scrape_configs:
  - job_name: system
    journal:
      labels:
        job: "{{ inventory_hostname }}_logs"

    relabel_configs:
      - source_labels: ['__journal__systemd_unit']
        target_label: 'unit'