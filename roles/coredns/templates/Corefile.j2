(snip) {
    bind 127.0.0.1 ::1
    bind {{ ansible_bond0.device }}
    any
    minimal
    log
    cache 300
    errors {
        consolidate 120s ".* i/o timeout$"
        consolidate 30s "^Failed to .+"
    }
}

{{ grp_local_domain }}.:{{ coredns_port }} {
    import snip
    prometheus [::]:{{ coredns_prometheus_port }}
    file /opt/coredns/master.db
}

.:{{ coredns_port }} {
    import snip
    prometheus [::]:{{ coredns_prometheus_port }}
    forward . {{ host_coredns_upstream_dns_server.ipv4_addr }}:{{ host_coredns_upstream_dns_server.port }} {
        except example.org
        except {{ grp_local_domain }}
        except in-addr.arpa
        health_check 5s
        prefer_udp
    }
}