{
  "Control-agent": {
    "http-host": "{{ isc_kea_ctrl_agent_address }}",
    "http-port": {{ isc_kea_ctrl_agent_port }},
    "control-sockets": {
      "dhcp4": 
      {
        "socket-type": "unix",
        "socket-name": "/tmp/kea4-ctrl-socket"
      },
      "dhcp6": 
      {
        "socket-type": "unix",
        "socket-name": "/tmp/kea6-ctrl-socket"
      },
      "d2": 
      {
        "socket-type": "unix",
        "socket-name": "/tmp/kea-ddns-ctrl-socket"
      }
    },
    "loggers": [
      {
        "name": "kea-ctrl-agent",
        "output_options": [
          {
            "output": "stdout",
            "pattern": "%-5p %m\n",
            "flush": false,
            "maxsize": 1048576,
            "maxver": 8
          }
        ],
        "severity": "INFO",
        "debuglevel": 0
      }
    ]
  }
}